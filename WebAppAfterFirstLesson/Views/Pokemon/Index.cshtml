@model WebAppAfterFirstLesson.Models.PokemonModels[]
@{
    ViewBag.Title = "Index";
}
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Master</th>
            <th>Picture</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td><h3>@c.PokemonName</h3></td>
                <td><h3>@c.MasterName</h3></td>
                <td>
                    <div class="thumbnail">
                        <img src="~/Content/Images/@c.PicUrl" alt="@c.PokemonName" class="img-responsive">
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

